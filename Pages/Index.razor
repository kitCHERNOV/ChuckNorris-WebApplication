@page "/"
@using BlazorApp1.Services
@inject ActiveDirectoryService AdService
@inject NavigationManager Navigation

@* Add Bootstrap CSS *@
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="form-group">
                            <label for="username">Username:</label>
                            <InputText id="username" class="form-control" @bind-Value="loginModel.Username" placeholder="Enter your username" />
                            <ValidationMessage For="@(() => loginModel.Username)" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <InputText id="password" class="form-control" @bind-Value="loginModel.Password" type="password" placeholder="Enter your password" />
                            <ValidationMessage For="@(() => loginModel.Password)" class="text-danger" />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </EditForm>
                </div>
                <div class="card-footer text-center">
                    <p class="text-danger">@loginMessage</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string? loginMessage;

    private async Task HandleLogin()
    {

        if (string.IsNullOrWhiteSpace(loginModel.Username))
        {
            loginMessage = "Username is required.";
            return;
        }

        if (string.IsNullOrWhiteSpace(loginModel.Password))
        {
            loginMessage = "Password is required.";
            return;
        }

    
        if (AdService.ValidateUser(loginModel.Username, loginModel.Password)==false)
        {
            if (AdService.IsUserInGroup(loginModel.Username) == false)
            {
                Navigation.NavigateTo("/success");
            }
            else
            {
                loginMessage = "User is not in the required group.";
            }
        }
        else
        {
            loginMessage = "Invalid username or password.";
        }
    }

    private class LoginModel
    {
        public string Username { get; set; } = string.Empty;
        public string Password { get; set; } = string.Empty;
    }
}
